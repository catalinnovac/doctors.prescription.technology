<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="prescriptionTheme" parent="android:Theme.DeviceDefault.Light.NoActionBar">
        <item name="android:actionBarStyle">@style/prescriptionTheme.ActionBar</item>
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>
    <!-- Application theme. -->
    <style name="prescriptionTheme.ActionBar" parent="android:Widget.Holo.Light.ActionBar.Solid">
        <item name="android:titleTextStyle">@style/prescriptionTheme.ActionBar.TitleTextStyle</item>
    </style>
    <style name="prescriptionTheme.ActionBar.TitleTextStyle">
        <item name="android:textColor">#000</item>
    </style>

</resources>
